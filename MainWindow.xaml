<Window x:Class="HelloWorld2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBoxUserName" HorizontalAlignment="Left" Height="23" Margin="128,122,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="120" TextChanged="textBoxUserName_TextChanged"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="128,158,0,0" VerticalAlignment="Top" Width="120" PasswordChanged="passwordBox_PasswordChanged" Password="password"/>
        <Label x:Name="labelUserName" Content="User Name" HorizontalAlignment="Left" Margin="54,118,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelPassword" Content="Password" HorizontalAlignment="Left" Margin="54,150,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSubmit" Content="Submit" HorizontalAlignment="Left" Margin="163,227,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="buttonSubmit_Click"/>

    </Grid>
</Window>
